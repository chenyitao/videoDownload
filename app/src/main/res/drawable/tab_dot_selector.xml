<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list android:opacity="opaque">
            <item
                android:width="6dp"
                android:height="6dp"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="#AF181E"/>
                    <size
                        android:width="5dp"
                        android:height="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list android:opacity="opaque">
            <item
                android:width="5dp"
                android:height="5dp"
                android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="#CCCCCC"/>
                    <size
                        android:width="5dp"
                        android:height="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>